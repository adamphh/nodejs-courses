    "express": "^4.18.2",
    "express-handlebars": "^7.1.2",
    "mongoose": "^8.0.3",
    "mongoose-slug-generator": "^1.0.4"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "morgan": "^1.10.0",
    "node-sass": "^9.0.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1"
  }
